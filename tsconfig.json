{
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", ".leaf", "tests"],
  "compilerOptions": {
    
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",         
    "target": "ES2020",
    "outDir": ".leaf/main",
    "rootDir": "src",
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",

    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,

    "jsx": "react",
    "jsxFactory": "h"
  }
}
